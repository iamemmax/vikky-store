        navbar.style.display = "none"
        removeNav.classList.add("removeNavbar")
        removeOnclick.style.display = "block"

    })
    const removeNav = document.querySelector('.removeNav')
        removeNav.addEventListener("click", (e)=>{
        ul.classList.remove("showNav")
