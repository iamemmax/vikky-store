<script>
    const ul = document.querySelector('.nav-ul') 
    const li = document.querySelectorAll("li")
    const navbar = document.querySelector(".navbar")
    const removeOnclick = document.querySelector(".removeOnclick")

    navbar.addEventListener("click", (e)=>{
        ul.classList.add("showNav")
        navbar.style.display = "none"
        removeNav.classList.add("removeNavbar")
        removeOnclick.style.display = "block"

    })
    const removeNav = document.querySelector('.removeNav')
        removeNav.addEventListener("click", (e)=>{
        ul.classList.remove("showNav")
        navbar.style.display = "flex"
        removeNav.classList.remove("removeNavbar")
        removeOnclick.style.display = "none"
        rightNavInfo.style.display = "none"



        }) 
   
        removeOnclick.addEventListener("click", (e)=>{
        ul.classList.remove("showNav")
        navbar.style.display = "flex"
        removeNav.classList.remove("removeNavbar")
        removeOnclick.style.display = "none"


        }) 

        li.forEach(el =>{
