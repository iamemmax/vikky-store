            ul.querySelector(".active").classList.remove("active")
            el.classList.add("active")
           })
        })
    
        // removeNav.classList.add("removeNavbar")

    
        let openRightNav = document.querySelector("#userImg")
let rightNavInfo = document.querySelector(".rightNavInfo")
let removeRightNav = document.querySelector(".removeRightNav")

    openRightNav.addEventListener("click", (e) =>{
    e.preventDefault()
    rightNavInfo.classList.toggle("show")
    removeRightNav.style.display = "block"
    
})
removeRightNav.addEventListener("click", (e) =>{
    removeRightNav.style.display = "none"
    rightNavInfo.classList.remove("show")


})

</script>


    
    

    